-- TASK 1
CREATE TABLE EMPLOYEES(EMPLOYEEID INT,FIRSTNAME VARCHAR(10),LASTNAME VARCHAR(10),DATEOFBIRTH DATE,DEPARTMENT VARCHAR(10));

-- TASK 2
CREATE TABLE ORDERS(ORDERID INT,ORDERDATE DATE,CUSTOMERID INT,AMOUNT DECIMAL);

-- TASK 3
INSERT INTO EMPLOYEES(EMPLOYEEID,FIRSTNAME,LASTNAME,DATEOFBIRTH,DEPARTMENT) VALUES(1,'ALICE','JOHNSON','1990-01-15','HR')
SELECT*FROM EMPLOYEES;

-- TASK 4
INSERT INTO ORDERS(ORDERID, ORDERDATE, CUSTOMERID, AMOUNT)VALUES(1,'2024-08-01', 101, 250.00);
INSERT INTO ORDERS(ORDERID, ORDERDATE, CUSTOMERID, AMOUNT)VALUES(2,'2024-08-02', 102, 550.00);
INSERT INTO ORDERS(ORDERID, ORDERDATE, CUSTOMERID, AMOUNT)VALUES(3,'2024-08-03', 103, 600.00);
INSERT INTO ORDERS(ORDERID, ORDERDATE, CUSTOMERID, AMOUNT)VALUES(4,'2024-08-04', 104, 650.00);

-- TASK 5
SELECT*FROM EMPLOYEES;

-- TASK 6
SELECT*FROM ORDERS;

-- TASK 7
SELECT FIRSTNAME,LASTNAME FROM EMPLOYEES;

-- TASK 8
SELECT ORDERID,AMOUNT FROM ORDERS;

-- TASK 9
UPDATE EMPLOYEES SET DEPARTMENT='FINANCE' WHERE EMPLOYEEID=1;
SELECT*FROM EMPLOYEES;

-- TASK 10
UPDATE ORDERS SET AMOUNT=500.00 WHERE ORDERID=2;
SELECT*FROM EMPLOYEES;

-- TASK 11
DELETE FROM EMPLOYEES WHERE EMPLOYEEID = 1;

-- TASK 12
DELETE FROM ORDERS WHERE AMOUNT < 100;

-- TASK 13
SELECT* FROM EMPLOYEES WHERE DEPARTMENT = 'HR';

-- TASK 14
SELECT*FROM ORDERS WHERE AMOUNT>300;

-- TASK 15
SELECT*FROM EMPLOYEES WHERE DEPARTMENT='HR' AND DATEOFBIRTH >'1990-01-01'; 

-- TASK 16
SELECT*FROM ORDERS WHERE AMOUNT>300 AND ORDERDATE<'2023-01-01';

-- TASK 17
SELECT*FROM EMPLOYEES WHERE DEPARTMENT='HR' OR DEPARTMENT='FINANCE';

--TASK 18
SELECT*FROM ORDERS WHERE AMOUNT<100 OR ORDERDATE>'2023-01-01';

-- TASK 19
SELECT*FROM EMPLOYEES ORDER BY LASTNAME ASC;

-- TASK 20
SELECT*FROM ORDERS ORDER BY AMOUNT DESC;

-- TASK 21
SELECT COUNT(EMPLOYEES) FROM EMPLOYEES;

-- TASK 22
SELECT COUNT(ORDERS) FROM ORDERS;

-- TASK 23
SELECT AVG(AMOUNT) FROM ORDERS;

-- TASK 24
SELECT AVG(AGE,DATEOFBIRTH()) FROM EMPLOYEES;

-- TASK 25
SELECT COUNT(EMPLOYEES) FROM EMPLOYEES GROUP BY DEPARTMENT;

-- TASK 26
SELECT SUM(AMOUNT) FROM ORDERS GROUP BY CUSTOMERID;

-- TASK 27
SELECT DEPARTMENT FROM EMPLOYEES GROUP BY DEPARTMENT HAVING COUNT(*)>5;

-- TASK 28
SELECT CUSTOMERID FROM ORDERS GROUP BY CUSTOMERID HAVING COUNT(AMOUNT)>1000;

-- TASK 29
SELECT EMPLOYEE.FIRSTNAME, EMPLOYEE.LASTNAME,ORDER.AMOUNT FROM EMPLOYEES EMPLOYEE LEFT JOIN ORDERS ORDER ON EMPLOYEE.EmployeeID =ORDER.CustomerID;

-- TASK 30
SELECT EMPLOYEE.EMPLOYEEID, EMPLOYEE.FIRSTNAME, EMPLOYEE.LASTNAME, ORDER.AMOUNT FROM EMPLOYEES EMPLOYEE LEFT JOIN ORDERS ORDER ON EMPLOYEE.EMPLOYEEID = ORDER.CustomerID;